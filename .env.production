# ── Server ────────────────────────────────────────────────────────────────────
NODE_ENV=production
PORT=5000
CLIENT_URL=https://emptytruck.in
APP_VERSION=1.0.0

# ── Database ──────────────────────────────────────────────────────────────────
MONGO_ROOT_USER=admin
MONGO_ROOT_PASS=CHANGE_ME_STRONG_PASSWORD
MONGO_APP_PASSWORD=CHANGE_ME_APP_PASSWORD
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ── JWT ───────────────────────────────────────────────────────────────────────
JWT_SECRET=CHANGE_ME_32_CHAR_MINIMUM_SECRET_KEY
JWT_EXPIRE=7d

# ── Cloudinary ────────────────────────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ── Email (Gmail App Password) ────────────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@emptytruck.in
SMTP_PASS=your_gmail_app_password
FROM_EMAIL=noreply@emptytruck.in
FROM_NAME=EmptyTruck Connect

# ── Twilio SMS ────────────────────────────────────────────────────────────────
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ── Razorpay ──────────────────────────────────────────────────────────────────
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_live_secret

# ── Stripe (international) ────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxx

# ── Google Maps ───────────────────────────────────────────────────────────────
GOOGLE_MAPS_KEY=your_server_side_maps_key
VITE_GOOGLE_MAPS_KEY=your_client_side_maps_key

# ── Frontend build ────────────────────────────────────────────────────────────
VITE_API_URL=https://api.emptytruck.in
VITE_SOCKET_URL=wss://api.emptytruck.in

# ── Platform ──────────────────────────────────────────────────────────────────
PLATFORM_COMMISSION_PERCENT=8
MAX_DEVIATION_KM=100

# ── Slack (optional, for deploy notifications) ────────────────────────────────
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# ── MongoDB Express admin UI (dev only) ───────────────────────────────────────
MONGOEXPRESS_USER=admin
MONGOEXPRESS_PASS=CHANGE_ME_ADMIN_PASSWORD
